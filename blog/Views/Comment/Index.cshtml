@model IEnumerable<blog.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<section>
    <article class="blogPost">
        <header>
            <h2>@ViewBag.postTitle</h2>
            <p>Posted on <time datetime="@ViewBag.postDate">@ViewBag.postDate</time> by <a href="#">@ViewBag.postAuthor)</a> - <a href="#comments">@Model.Count() comments</a></p>
        </header>
    </article>
</section>

    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorWebsiteUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorWebsiteUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.CommentID })
                </td>
            </tr>
        }

    </table>
